<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.trechina.planocycle.mapper.LogMapper">
    <insert id="saveErrorLog">
        insert into "planocycle_log".log(request_path,request_params,create_time,error_msg)
        values (
                #{controller},#{params},now(),#{msg}
               )
    </insert>
    <delete id="deleteLog">
        delete from "planocycle_log".log where create_time &lt; current_date::timestamp - INTERVAL '2 day'
    </delete>
    <insert id="addTimeLog">
        insert into "planocycle_log".method_time_log(method_name,start_time,end_time,params,total_time)
        values (
        #{methodName},#{startTime},#{endTime},#{params},#{totalTime}
        )
    </insert>
</mapper>